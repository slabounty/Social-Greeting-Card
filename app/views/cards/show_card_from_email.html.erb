<% if @card.recipient.active == true %>
    <span class="to">To: <%= link_to "#{@card.recipient.first_name} #{@card.recipient.last_name}", user_path(@card.recipient) %></span><br/>
<% else %>
    <span class="to">To: <%= "#{@card.recipient.email}" %></span><br/>
<% end %>
<span class="from">From: <%= link_to "#{@card.sender.first_name} #{@card.sender.last_name}" , user_path(@card.sender)%></span><br/>
<span class="card_image"><%= image_tag  "card_images/#{@card.template.image_name}" %></span><br/>
<span class="greeting"><%= @card.greeting %></span><p/>
<% @card.signatures.each do |sig| %>
    <% if sig.signed == true %>
        <div class="signed">Signed: <%= link_to "#{sig.signer.first_name} #{sig.signer.last_name}", user_path(sig.signer) %><p/>
        <%= "#{sig.message}" %><p/>
        </div>
    <% end %>
<% end %>
<span class="timestamp">
    Created <%= time_ago_in_words(@card.created_at) %> ago.
</span>

